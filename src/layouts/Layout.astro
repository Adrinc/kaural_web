	id="background-video"
	/>
	
	</body>
	{showFooter && <FootUWIFI/>}
</html>

<script>
	window.addEventListener('scroll', function() {
	  const video = document.getElementById('background-video');
	  const scrollPosition = window.scrollY;
	  let blurValue = Math.min(scrollPosition / 100, 10); 
	  //limit blur value between 0 and 10

	  if (blurValue > 10) {
      blurValue = 10;
    } else if (blurValue < 0) {
      blurValue = 0;
    }

    if (video) {
      video.style.filter = `blur(${blurValue}px)`;
    }
	
	});
  </script>

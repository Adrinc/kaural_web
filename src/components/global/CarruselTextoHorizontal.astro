---

interface Props {
	texto?:string;
	cantidad?:number;
	imagen?:string;
}

const {texto="", cantidad=10,  imagen="/image/Elkauraltxtblanco.png" } = Astro.props;
const items = Array.from({ length: cantidad }).map(() => ({ texto, imagen }));
---

<div class="content-wrapper">
	<div class="carrusel">
	  {items.concat(items).map((item) => (
		<div class="item" >
		  <img src={item.imagen} alt="kaural" />
		  <img src="/image/kaural/calavera_blanca.png" alt="kaural" />
		{/*   <button class="check-coverage-btn">{item.texto}</button> */}
		</div>
	  ))}
	</div>
  </div>
  


<style>
	.content-wrapper {
	
/* 	  border-top: 1px solid var(--tertiary-color);
	  border-bottom: 1px solid var(--tertiary-color); */
/* 	  border-top: 1px solid #fff;
	  border-bottom: 1px solid #fff; */
	

	  overflow: hidden; 
	  background-color: rgb(0, 0, 0);
	  z-index: 10;height: 150px;
	}
	
	.carrusel{
	display: flex;
	flex-direction: row;
	width: 10000px;
	height: 100%;
	align-items: flex-center;
	align-content: flex-start;

	white-space: nowrap;
  	position: relative;
	gap: 30px;
	animation: marquee 50s linear infinite;
	background-color: #000000;
	}
	.item {
    flex: 0 0 auto;
    width: calc(100% / {cantidad}); /* Ajustar el ancho de cada elemento */
    display: flex;
    flex-direction: row;
    align-items: center;
  
  }
	img {
	  width: 250px;
	  height: 70px;
	  object-fit: contain;
	  /* gap: 100px; */
	}
	

	@keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
	.check-coverage-btn {
	  color: var(--primary-text-color);
	  text-transform: uppercase;
	  align-self: stretch;
	  flex-grow: 1;
	  flex-basis: auto;
	  font: 300 24px Inter, sans-serif;
	  background: none;
	  border: none;
	  cursor: pointer;
	}
  
	@media  screen and (height< 400px) {
		.content-wrapper {
	  padding-right: 153px;
	  border-top: 1px solid var(--tertiary-color);
	  border-bottom: 1px solid var(--tertiary-color);
	  padding: 20px;
/* 	  margin-top: clamp(40px, 50vh, 200px);
	  margin-botom: clamp(40px, 50vh, 200px); */
	  height: 60px;
	}
	
	}
	@media (max-width: 900px) 
	{
		.content-wrapper {
			height: auto;
	}
	img{
		height: 50px;
	}
	}
  
	
  </style>